# SwarmOS Backend Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Bee-1 Controller
# =============================================================================
BEE1_HOST=0.0.0.0
BEE1_PORT=8000
BEE1_ENS=swarmos.eth
BEE1_PRIVATE_KEY=0x...  # For signing epochs (KEEP SECRET)

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite:///./data/swarmledger.db
# For production:
# DATABASE_URL=postgresql://user:pass@localhost:5432/swarmledger

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# IPFS
# =============================================================================
IPFS_API_URL=http://localhost:5001

# =============================================================================
# Ethereum L1
# =============================================================================
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
USDC_CONTRACT=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# =============================================================================
# Epoch Settings
# =============================================================================
EPOCH_DURATION_HOURS=24
WORK_POOL_PCT=70
READINESS_POOL_PCT=30
PROTOCOL_FEE_PCT=2
OPERATOR_FEE_PCT=5

# =============================================================================
# Job Pricing
# =============================================================================
JOB_FEE_USD=0.10

# =============================================================================
# Bee-2 Worker (set per worker)
# =============================================================================
WORKER_ENS=bee-01.swarmbee.eth
WORKER_PRIVATE_KEY=0x...  # For signing completions
GPU_MODEL=RTX 5090
VRAM_GB=32
CUDA_VERSION=12.4
WORKER_IP=10.0.0.10
