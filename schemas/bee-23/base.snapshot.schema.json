{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.swarmhive.eth/bee-23/base.snapshot.schema.json",
  "title": "Bee-23 Base Snapshot",
  "type": "object",
  "required": ["type", "version", "id", "ts", "issuer", "body", "signing"],
  "properties": {
    "type": { "type": "string" },
    "version": { "type": "string", "pattern": "^bee-23@1\\.[0-9]+$" },
    "id": { "type": "string", "pattern": "^[a-z0-9\\-_:]{8,128}$" },
    "ts": { "type": "integer", "minimum": 1700000000 },
    "issuer": { "type": "string", "pattern": "^.+\\.(eth|swarmos\\.eth|swarmhive\\.eth)$" },
    "pool": { "type": "string", "const": "swarmpool.eth" },
    "body": { "type": "object" },
    "refs": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "signing": {
      "type": "object",
      "required": ["scheme", "did", "payload_hash", "signature"],
      "properties": {
        "scheme": { "type": "string", "enum": ["eip191", "eip712"] },
        "did": { "type": "string", "pattern": "^ens:.+$" },
        "payload_hash": { "type": "string", "pattern": "^(sha256|keccak256):[a-f0-9]{64}$" },
        "signature": { "type": "string", "pattern": "^(eip191|eip712):0x[a-fA-F0-9]{130}$" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
