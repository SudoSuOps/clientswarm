{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.swarmhive.eth/bee-23/job.schema.json",
  "title": "Bee-23 JOB Snapshot",
  "allOf": [
    { "$ref": "base.snapshot.schema.json" },
    {
      "properties": {
        "type": { "const": "JOB" },
        "body": {
          "type": "object",
          "required": ["job_id", "epoch", "task", "mode", "reward", "inputs"],
          "properties": {
            "job_id": { "type": "string", "pattern": "^job-[a-z0-9\\-]{6,64}$" },
            "epoch": { "type": "integer", "minimum": 1 },
            "task": { "type": "string", "minLength": 3, "maxLength": 128 },
            "mode": { "type": "string", "enum": ["SOLO", "PPL"] },
            "reward": {
              "type": "object",
              "required": ["total", "currency", "miners_pct", "hive_pct"],
              "properties": {
                "total": { "type": "string", "pattern": "^[0-9]+\\.[0-9]{2}$" },
                "currency": { "type": "string", "enum": ["USDC", "USDT", "DAI"] },
                "miners_pct": { "type": "integer", "minimum": 1, "maximum": 99 },
                "hive_pct": { "type": "integer", "minimum": 1, "maximum": 99 }
              },
              "additionalProperties": false
            },
            "requirements": {
              "type": "object",
              "properties": {
                "min_gpu_vram_gb": { "type": "integer", "minimum": 0 },
                "min_gpu_count": { "type": "integer", "minimum": 0 },
                "framework": { "type": "string" },
                "max_latency_ms": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false
            },
            "inputs": {
              "type": "object",
              "required": ["input_cid"],
              "properties": {
                "input_cid": { "type": "string", "pattern": "^ipfs://.+$" },
                "input_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
              },
              "additionalProperties": false
            },
            "privacy": {
              "type": "object",
              "properties": {
                "contains_phi": { "type": "boolean" },
                "encryption": { "type": "string", "enum": ["none", "age", "pgp"] }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
